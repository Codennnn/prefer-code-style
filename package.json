{
  "name": "prefer-code-style",
  "version": "0.5.0",
  "description": "A collection of configuration files containing prettier, eslint, stylelint",
  "keywords": [
    "code lint",
    "eslint",
    "stylelint",
    "prettier"
  ],
  "homepage": "https://github.com/Codennnn/prefer-code-style#readme",
  "bugs": {
    "url": "https://github.com/Codennnn/prefer-code-style/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Codennnn/prefer-code-style.git"
  },
  "license": "MIT",
  "author": "LeoKu <czc12580520@gmail.com> (https://leoku.top)",
  "main": "lib/index.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "prebuild": "rimraf ./lib/",
    "build": "tsc --build tsconfig.json",
    "deps": "yarn upgrade-interactive --latest",
    "lint": "yarn lint:es",
    "lint:es": "eslint --ignore-path \"./.eslintignore\" \"./**/*.{js,jsx,ts,tsx}\"",
    "prepublishOnly": "yarn build",
    "test": "echo \"Error: no test specified\" && exit 1",
    "test:demo": "yarn build && cd ./demo && yarn lint",
    "test:js": "yarn build && cd ./jsExample && yarn lint"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@babel/core": "^7.16.0",
    "@babel/eslint-parser": "^7.16.0",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "@typescript-eslint/parser": "^5.2.0",
    "eslint": "^8.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.2.1-alpha-9c8161ba8-20211028",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "prettier": "^2.4.1",
    "stylelint": "^14.0.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^24.0.0",
    "stylelint-order": "^5.0.0",
    "stylelint-prettier": "^2.0.0",
    "stylelint-scss": "^4.0.0"
  },
  "devDependencies": {
    "cz-conventional-changelog": "3.3.0",
    "rimraf": "^3.0.2",
    "typescript": "4.5.2"
  }
}
