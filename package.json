{
  "name": "prefer-code-style",
  "version": "0.7.0",
  "description": "A collection of configuration files containing prettier, eslint, stylelint",
  "keywords": [
    "code lint",
    "eslint",
    "stylelint",
    "prettier"
  ],
  "homepage": "https://github.com/Codennnn/prefer-code-style#readme",
  "bugs": {
    "url": "https://github.com/Codennnn/prefer-code-style/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Codennnn/prefer-code-style.git"
  },
  "license": "MIT",
  "author": "LeoKu <czc12580520@gmail.com> (https://leoku.top)",
  "type": "commonjs",
  "main": "lib/index.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "prebuild": "rimraf ./lib/",
    "build": "tsc --build tsconfig.json",
    "deps": "yarn upgrade-interactive --latest",
    "lint": "yarn lint:es",
    "lint:es": "eslint \"./**/*.{js,jsx,ts,tsx}\"",
    "prepublishOnly": "yarn build",
    "test": "yarn build && cd \"./examples/green-wall\" && yarn lint"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@babel/core": "^7.20.2",
    "@babel/eslint-parser": "^7.19.1",
    "@typescript-eslint/eslint-plugin": "^5.44.0",
    "@typescript-eslint/parser": "^5.44.0",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.11",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-tailwindcss": "^3.7.0",
    "prettier": "^2.8.0",
    "prettier-plugin-packagejson": "^2.3.0",
    "stylelint": "^14.15.0",
    "stylelint-config-prettier": "^9.0.4",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-recommended": "^9.0.0",
    "stylelint-config-standard": "^29.0.0",
    "stylelint-less": "^1.0.6",
    "stylelint-order": "^5.0.0",
    "stylelint-prettier": "^2.0.0",
    "stylelint-scss": "^4.3.0"
  },
  "devDependencies": {
    "@types/node": "^18.11.9",
    "cz-conventional-changelog": "3.3.0",
    "rimraf": "^3.0.2",
    "typescript": "4.9.3"
  },
  "engines": {
    "node": ">=14.x"
  }
}
